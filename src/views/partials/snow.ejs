<style>
    /* Styles de base */
    .snowContainer {
        overflow: hidden;
        pointer-events: none;
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 9999; /* Toujours visible en haut */
    }

    .snowflake {
        position: absolute;
        top: -10px;
        color: #9cdb2f;
        font-size: 8px; /* Taille par défaut des flocons */
        opacity: 0.8;
        text-shadow: 0 0 8px rgba(255, 255, 255, 0.8); /* Ombre blanche */
        animation: fall linear infinite, sway ease-in-out infinite;
    }

    /* Animation de la chute */
    @keyframes fall {
        0% {
            top: -10px;
        }
        100% {
            top: 110vh; /* Descend au-delà de l'écran */
        }
    }

    /* Animation du vent */
    @keyframes sway {
        0% {
            transform: translateX(0);
        }
        25% {
            transform: translateX(10px);
        }
        50% {
            transform: translateX(-15px);
        }
        75% {
            transform: translateX(10px);
        }
        100% {
            transform: translateX(0);
        }
    }
</style>

<div class="snowContainer"></div>

<script>
    // Paramètres
    const SNOWFLAKE_COUNT = 100; // Nombre de flocons
    const container = document.querySelector('.snowContainer');

    // Générer des flocons
    for (let i = 0; i < SNOWFLAKE_COUNT; i++) {
        const snowflake = document.createElement('div');
        snowflake.className = 'snowflake';
        snowflake.innerHTML = '•'; // Flocon en point

        // Position et style aléatoires
        const size = Math.random() * 10 + 5; // Taille entre 3px et 11px
        const duration = Math.random() * 10 + 15; // Durée de chute entre 15s et 25s
        const delay = Math.random() * -20; // Décalage pour éviter une synchronisation
        const swayDuration = Math.random() * 5 + 5; // Effet de vent aléatoire entre 5s et 10s

        snowflake.style.left = Math.random() * 100 + 'vw'; // Position horizontale
        snowflake.style.fontSize = size + 'px';
        snowflake.style.animationDuration = `${duration}s, ${swayDuration}s`;
        snowflake.style.animationDelay = `${delay}s, ${delay}s`;

        container.appendChild(snowflake);
    }
</script>
